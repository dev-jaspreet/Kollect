<% include ./partials/header %>

<div class="container">
  <div class="row">
    <div class="col s12 m6 l4"></div>
    <div class="col s12 m6 l4 z-depth-1 mystyleother customborder">
      <h3>Log In</h3>
      <form action="/login" method="POST">
        <div class="input-field">
          <input type="text" name="username" class="validate" id="username">
          <label for="username">Username:</label>
          <small id="emailHelp" class="form-text text-muted">Please don't enter someone else's ID</small>
        </div>
        <div class="input-field">
          <label for="password">Password:</label>
          <input type="password" name="password"  class="validate" id="password">
        </div>
        <div class="input-field">
          <p>
            <label>
              <input type="checkbox" required>
              <span>Confirm</span>
            </label>
          </p>
        </div>
        <button type="submit" class="waves-effect waves-light btn mystylebutton">Log In</button>
      </form>
    </div>
    <div class="col s12 m6 l4"></div>
  </div>
</div>

<% include ./partials/footer %>