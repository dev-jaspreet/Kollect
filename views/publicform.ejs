<% include ./partials/header %>

<div class="container">
    <div class="row">
        <% if(count == -1){ %>
        <div class="col s12 m6 l3"></div>
        <div class="col s12 m6 z-depth-1 mystyleother customborder">
            <h3>How Many Question(s) Would Like To Create?</h3>
            <form action="/new/public/publiccount" method="POST">
                <div class="input-field">
                    <label for="count">Number Of Questions: (Optional)</label>
                    <input type="number" name="count" id="count">
                    <small id="emailHelp" class="form-text text-muted">This Number Can Not Be Changed, By Default:
                        0, But Can Add More Later.</small>
                </div>
                <button class="btn waves-effect waves-light mystylebutton" type="submit" name="action">Next
                    <i class="material-icons right">queue_play_next</i>
            </form>
        </div>
        <div class="col s12 m6 l3 center">
            <div class="preloader-wrapper big active">
                <div class="spinner-layer spinner-blue">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="gap-patch">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
                <div class="spinner-layer spinner-red">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="gap-patch">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
                <div class="spinner-layer spinner-yellow">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="gap-patch">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
                <div class="spinner-layer spinner-green">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="gap-patch">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% } %>
    <% if(count != -1){ %>
    <div class="col s12 m6 l3"></div>
    
    <div class="col s12 m6 z-depth-1 mystyleother customborder">
        <h3>Enter Your Desired Questions.</h3>
        <form action="/new/public" method="POST">
            <div class="input-field">
                <label for="name">Set Question Bank Name</label>
                <input type="text" name="name" class="validate" id="name" required>
                <small id="emailHelp" class="form-text text-muted">Needed</small>
            </div>
            <div id="customdiv">
                <%    for(var i = 0; i < count; i++){ %>
                <div class="input-field">
                    <label for="question"><%= i+1 %>: Question Type: TEXT Needed</label>
                    <input type="text" name="question" class="validate" id="question" required>
                </div>
                <%    } %>
            </div>
            <div class="row">
            <div class="col s6"><button class="col s12 btn waves-effect waves-light mystylebutton" type="submit" name="action">Create</button></div>
                <div class="col s6"><a href="/index" class="col s12 btn waves-effect waves-light mystylebutton">Discard</a></div>
                </div>
        </form>
        <hr>
        <div class="row">
            <div class="col s6"><button class="col s12 dropdown-trigger waves-effect waves-light btn mystylebutton green darken-4 " data-target='dropdown1'><i class="material-icons">add</i></button></div>
            <div class="col s6"><button type="submit"
                    class="col s12 waves-effect waves-light btn mystylebutton red darken-4"><i
                        class="material-icons">clear</i></button></div>
        </div>
    </div>
    <div class="col s12 m6 l3"></div>
    <% } %>
</div>

<ul id='dropdown1' class='dropdown-content'>
    <li><a href="#!">Text</a></li>
    <li><a href="#!">Date</a></li>
    <li><a href="#!">Email</a></li>
    <li><a href="#!">Number</a></li>
    <li><a href="#!">Url</a></li>
</ul>
  
  
<script src="/scripts/publicnew.js"></script>
<% include ./partials/footer %>