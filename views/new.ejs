<% include ./partials/header %>

<div class="container">
    <div class="row">
        <div class="col">
        </div>
        <div class="col-6">
            <h3>Create A New Question Bank</h3>
            <p></p>
            <% if(!count){ %>
            <!--<h5>Enter Number Of Questions</h5>-->
            <form action="/count" method="POST">
                <div class="form-group">
                    <label for="count">Number Of Questions:</label>
                    <input type="number" name="count" class="form-control" id="count"
                        placeholder="Enter Number of Questions">
                    <small id="emailHelp" class="form-text text-muted">This Number Cannot Be Changed</small>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <% } %>
            <% if(count){ %>
            <form action="/new" method="POST">
                <div class="form-group">
                    <label for="name">Set Question Bank Name</label>
                    <input type="text" name="name" class="form-control" id="name"
                        placeholder="Enter Name of Question Bank">
                    <small id="emailHelp" class="form-text text-muted">Needed</small>
                </div>
                <%    for(var i = 0; i < count; i++){ %>
                <div class="form-group">
                    <label for="question"><%= i+1 %>: Question</label>
                    <input type="text" name="question" class="form-control" id="question" placeholder="Type Here">
                </div>
                <%    } %>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
            <% } %>
        </div>
        <div class="col">
        </div>
    </div>

</div>

<% include ./partials/footer %>