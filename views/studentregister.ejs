<% include ./partials/header %>

<div class="container">
  <div class="row">
    <div class="col s12 m6 l3"></div>
    <div class="col s12 m6 z-depth-1 mystyleother customborder">
      <h3>Student Registration Form</h3>
      <form action="/studentregister" enctype="multipart/form-data" method="POST">
        <div class="row">
          <div class="input-field col s4">
            <label for=" fname">First Name:</label>
            <input type="text" name="fname" class="validate" id="fname" required>
          </div>
          <div class="input-field col s4">
            <label for=" mname">Middle Name:</label>
            <input type="text" name="mname" class="validate" id="mname" required>
          </div>
          <div class="input-field col s4">
            <label for=" lname">Last Name:</label>
            <input type="text" name="lname" class="validate" id="lname" required>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s4">
            <select name="department" required>
              <option value="" disabled selected>Department:</option>
              <option value="cse">CSE</option>
              <option value="it">IT</option>
              <option value="cce">CCE</option>
            </select>
            <label for="department">Select Department:</label>
          </div>
          <div class="input-field col s4">
            <select name="section" required>
              <option value="" disabled selected>Section:</option>
              <option value="a">A</option>
              <option value="b">B</option>
              <option value="c">C</option>
              <option value="d">D</option>
            </select>
            <label for="section">Select Section:</label>
          </div>
          <div class="input-field col s4">
            <select name="year" required>
              <option value="" disabled selected>Year:</option>
              <option value="1">First</option>
              <option value="2">Second</option>
              <option value="3">Third</option>
              <option value="4">Fourth</option>
            </select>
            <label for="year">Select Current Year:</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s6">
            <label for=" email">Email:</label>
            <input type="text" name="email" class="validate" id=" email" required>
          </div>
          <div class="input-field col s6">
            <label for="registrationno">Registration No:</label>
            <input type="number" name="registrationno" class="validate" id="registrationno" data-length="9" required>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s6">
            <select name="gender" required>
              <option value="" disabled selected>Gender:</option>
              <option value="male">Male</option>
              <option value="female">Female</option>
            </select>
            <label for="gender">Select Gender:</label>
          </div>
          <div class="input-field col s6">
            <label for="phone">Mobile No:</label>
            <input type="number" name="phone" class="validate" id="phone" required>
          </div>
        </div>
        <div class="row">
          <div class="file-field input-field col s12">
            <div class="btn mystylebutton">
              <span>File</span>
              <input type="file" name="image">
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" placeholder="Upload Your Profile Image (Optional)" type="text">
            </div>
          </div>
          <div class="input-field col s12">
            <label for="password">Set Password:</label>
            <input type="password" name="password" class="validate" id="password" required>
          </div>
          <div class="input-field col s12">
            <label for="passwordconfirm">Confirm Password:</label>
            <input type="password" class="validate" name="passwordconfirm" id="passwordconfirm" required>
          </div>
        </div>
        <button class="btn waves-effect waves-light mystylebutton" type="submit" name="action">Sign Up
          <i class="material-icons right">send</i>
        </button>
      </form>
    </div>
    <div class="col s12 m6 l3"></div>
  </div>
</div>

<% include ./partials/footer %>