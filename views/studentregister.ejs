<% include ./partials/header %>

<div class="container">
    <div class="row">
        <div class="col s12 m6 l3"></div>
        <div class="col s12 m6 l6">
            <h3>Student Registration Form</h3>
                <% if(error && error.length > 0){%>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong><%= error%></strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <% } %>
                <form action="/studentregister" method="POST">
                    <div class="row">
                        <div class="input-field col s6">
                            <label for=" fname">Username:</label>
                            <input type="text" name="username"  class="validate" id=" fname" required>
                        </div>
                        <div class="input-field col s6">
                            <label for=" mname">Name:</label>
                            <input type="text" name="name"  class="validate" id=" mname" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s4">
                            
                            <select name="department"required>
                                <option value="" disabled selected>Department:</option>
                                <option value="cse">CSE</option>
                                <option value="it">IT</option>
                                <option value="cce">CCE</option>
                            </select>
                            <label for="department">Select Department:</label>
                        </div>
                        <div class="input-field col s4">
                            
                            <select name="section"required>
                                <option value="" disabled selected>Section:</option>
                                <option value="a">A</option>
                                <option value="b">B</option>
                                <option value="c">C</option>
                                <option value="d">D</option>
                            </select>
                            <label for="section">Select SECTION:</label>
                        </div>
                        <div class="input-field col s4">
                            
                            <select name="year"required>
                                <option value="" disabled selected>Year:</option>
                                <option value="1">First</option>
                                <option value="2">Second</option>
                                <option value="3">Third</option>
                                <option value="4">Fourth</option>
                            </select>
                            <label for="year">Select Current Year:</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <label for=" email">Email:</label>
                            <input type="text" name="email"  class="validate" id=" email" required>
                        </div>
                        <div class="input-field col s6">
                            <label for=" registrationno">Registration No:</label>
                            <input type="number" name="registrationno"  class="validate" id=" registrationno" data-length="9" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <select name="gender" required>
                                <option value="" disabled selected>Gender:</option>
                                <option value="male">Male</option>
                                <option value="female">Female</option>
                            </select>
                            <label for="gender">Select Gender:</label>
                        </div>
                        <div class="input-field col s6">
                            <label for="phone">Mobile No:</label>
                            <input type="number" name="phone"  class="validate" id="phone" required>
                        </div>
                    </div>
                    <div class="row">
                    <div class="input-field col s12">
                        <label for="password">Set Password:</label>
                        <input type="password" name="password"  class="validate" id="password" required>
                    </div>
                    <div class="input-field col s12">
                        <label for="passwordconfirm">Confirm Password:</label>
                        <input type="password"  class="validate" name="passwordconfirm" id="passwordconfirm" required>
                    </div>
                    </div>
                    <!--<div class="form-group">-->
                    <!--  <div class="form-check">-->
                    <!--    <input class="form-check-input" type="checkbox" id="gridCheck">-->
                    <!--    <label class="form-check-label" for="gridCheck">-->
                    <!--      Check me out-->
                    <!--    </label>-->
                    <!--  </div>-->
                    <!--</div>-->
                    <button class="btn waves-effect waves-light" type="submit" name="action">Sign Up
    <i class="material-icons right">send</i>
  </button>
                </form>
        </div>
        <div class="col s12 m6 l3"></div>
    </div>
</div>
<% include ./partials/footer %>