<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link type="text/css" rel="stylesheet" href="/materialize/css/materialize.min.css" media="screen,projection" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="theme-color" content="#4ecca3" />
  <meta name="description" content="Web portal designed to ease Data collection and Exportation.">
  <link rel="stylesheet" href="/app.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css">
  <link rel="icon" type="image/png" href="https://developer.android.com/preview/images/q-logo.png">
  <title><%=pageTitle%></title>
</head>

<body>
  <nav class="navcustom">
    <div class="nav-wrapper">
      <div class="container custom">
        <a href="/index" class="black-text brand-logo">Questionnaire</a>
        <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
        <ul class="right hide-on-med-and-down">
          <% if(currentuser && currentuser.type == "faculty"){ %>
          <% if(pageTitle == "Homepage"){ %>
          <li><a class="black-text nav-link tooltipped waves-effect waves-light modal-trigger material-icons"
              data-position="bottom" data-tooltip="Filter Results" href="#filter">search</a></li>
          <% } %>
          <li><a class="black-text nav-link tooltipped waves-effect waves-light" data-position="bottom"
              data-tooltip="Create A New Question Set" href="/new">New Entry</a></li>
          <% } %>
          <% if(!currentuser){ %>
          <li><a class="black-text nav-link waves-effect waves-light" href="/login">Login</a></li>
          <li><a class="black-text nav-link waves-effect waves-light" href="/studentregister">SignUp</a></li>
          <% } else{ %>
          <li>
            <a class="black-text nav-link tooltipped waves-effect waves-light" data-position="bottom"
              data-tooltip="Check Your Profile" href="/<%=currentuser.type%>/<%=currentuser._id %>">User Logged In:
              <%=currentuser.username %></a>
          </li>
          <li><a class="black-text nav-link waves-effect tooltipped waves-light" data-position="bottom"
              data-tooltip="Bye!" href="/logout">LogOut</a></li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <ul class="sidenav my" id="mobile-demo">
    <% if(currentuser && currentuser.type == "faculty"){ %>
    <li><a class="nav-link waves-effect waves-light" href="/new">New Entry</a></li>
    <li><a class="black-text nav-link waves-effect waves-light modal-trigger" href="#filter">Search</a></li>
    <% } %>
    <% if(!currentuser){ %>
    <li><a class="nav-link waves-effect waves-light" href="/login">Login</a></li>
    <li><a class="nav-link waves-effect waves-light" href="/studentregister">SignUp</a></li>
    <% } else{ %>
    <li>
      <a class="nav-link waves-effect waves-light" href="/<%=currentuser.type%>/<%=currentuser._id %>">User Logged In:
        <%=currentuser.username %></a>
    </li>
    <li><a class="nav-link waves-effect waves-light" href="/logout">LogOut</a></li>
    <% } %>
  </ul>