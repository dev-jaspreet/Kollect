<% include ./partials/header %>

<div class="container">
  <div class="row">
    <% var i = 0%>
    <% qns.forEach(function(questionno){ %>
    <div class="col s12 m6 l4">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= questionno.name %></span>
          <p>Created By: <%=questionno.creator.name%></p>
          <p>Created On: <%= questionno.created.toDateString() %></p>
          <p>Created For:
            <%=questionno.uniqueid.substring(0,3).toUpperCase()%>
            /<%=questionno.uniqueid.substring(3,4).toUpperCase()%>
            /<%=questionno.uniqueid.substring(4,5).toUpperCase()%></p>
        </div>
        <div class="card-action">
          <% if(currentuser.type == "faculty"){%>
          <a href="/display/<%= questionno._id%>">Open</a>
          <% } %>
        </div>
      </div>
      <% i++ %>
    </div>
    <% })%>
    <% i = 0%>
  </div>
</div>

<% include ./partials/footer %>